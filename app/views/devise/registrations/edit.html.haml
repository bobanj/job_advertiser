.block
  %h2 Edit #{resource_name.to_s.humanize}
  .content
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form' }) do |f|
      = devise_error_messages!
      .group.wat-cf
        .left
          = f.label :email, :class => 'label'
        .right
          = f.text_field :email, :class => 'text_field'
          %span.description Ex: test@example.com
      .group.wat-cf
        .left
          = f.label :password, :class => 'label'
        .right
          = f.password_field :password, :class => 'text_field'
          %span.description (leave blank if you don't want to change it)
      .group.wat-cf
        .left
          = f.label :password_confirmation, :class => 'label'
        .right
          = f.password_field :password_confirmation, :class => 'text_field'
          %span.description Repeat password
      .group.wat-cf
        .left
          = f.label :current_password, :class => 'label'
        .right
          = f.password_field :current_password, :class => 'text_field'
          %span.description (we need your current password to confirm your changes)
      .group.wat-cf
        .right
          %button{:class => 'button', :type => 'submit'}
            Update
    = render :partial => "devise/shared/links"
  %h3 Cancel my account
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
  = link_to "Back", :back

